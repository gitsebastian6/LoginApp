<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application

        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@drawable/welcomeimage"
        android:label="@string/app_name"
        android:roundIcon="@drawable/welcomeimage"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginApp"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AsegÃºrate de agregar android:exported="true" a ProductActivity -->
        <activity
            android:name="com.innovationhtb.products.ProductActivity"
            android:exported="true"/>

        <activity
            android:name="com.innovationhtb.products.CreateProductActivity"
            android:exported="true"/>

    </application>
</manifest>
